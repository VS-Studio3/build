<extension type="module" version="2.5" method="upgrade" client="site">
	<name>JBZoo Search</name>
	<author>Joomla-book</author>
    <creationDate>2013 01</creationDate>
	<copyright>Joomla-book.ru</copyright>
	<license>http://joomla-book.ru/info/disclaimer</license>
	<assetsLicense>http://joomla-book.ru/info/disclaimer</assetsLicense>
	<authorEmail>admin@joomla-book.ru</authorEmail>
	<authorUrl>http://joomla-book.ru</authorUrl>
    <version>1.6.0</version>
        
    <files>
		<filename module="mod_jbzoo_search">mod_jbzoo_search.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
		<folder>fields</folder>
		<folder>renderer</folder>
		<folder>tmpl</folder>
	</files>
    
    <config>
        <fields name="params" >

            <fieldset name="basic" addfieldpath="/modules/mod_jbzoo_search/fields">
                <field name="@spacer" type="jbzooinit" />
                <field name="application" type="zooapplication" default="" label="JBZOO_FILTER_ITEMS" description="JBZOO_FILTER_ITEMS_DESC" categories="true" frontpage="true" items="true" types="true" />
                <field name="mode"      type="hidden" label="" required="false" description="" />
                <field name="type"      type="hidden" label="" required="false" description="" />
                <field name="category"  type="hidden" label="" required="false" description="" />
                <field name="item_id"   type="hidden" label="" required="false" description="" />
                <field name="layout" type="filename" default="default" label="JBZOO_FILTER_LAYOUT" description="JBZOO_FILTER_LAYOUT_DESC" path="/renderer/item/" />
                <field name="menuitem" type="menuitem" default="0" state="1" label="JBZOO_FILTER_MENU" description="JBZOO_FILTER_MENU_DESC" />
                <field name="moduleclass_sfx" type="text" default="" label="JBZOO_MODULE_SFX" description="JBZOO_MODULE_SFX_DESC" />
                <field name="module-layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
            </fieldset>

            <fieldset name="LOGIC">
                <field name="logic" type="radio" default="and" label="JBZOO_FILTER_LOGIC" description="JBZOO_FILTER_LOGIC_DESC">
                    <option value="and">JBZOO_AND</option>
                    <option value="or">JBZOO_OR</option>
                </field>
                <field name="logic_show" type="radio" default="1" label="JBZOO_LOGIC_SHOW" description="JBZOO_LOGIC_SHOW_DESC">
                    <option value="1">JBZOO_YES</option>
                    <option value="0">JBZOO_NO</option>
                </field>
            </fieldset>

            <fieldset name="PAGES">
                <field name="pages" type="list" default="20" label="JBZOO_FILTER_PAGES" description="JBZOO_FILTER_PAGES_DESC">
                    <option value="5">JBZOO_NUMBERS_5</option>
                    <option value="10">JBZOO_NUMBERS_10</option>
                    <option value="15">JBZOO_NUMBERS_15</option>
                    <option value="20">JBZOO_NUMBERS_20</option>
                    <option value="25">JBZOO_NUMBERS_25</option>
                    <option value="30">JBZOO_NUMBERS_30</option>
                    <option value="50">JBZOO_NUMBERS_50</option>
                    <option value="100">JBZOO_NUMBERS_100</option>
                    <option value="all">JBZOO_ALL</option>
                </field>
                <field name="pages_show" type="radio" default="1" label="JBZOO_PAGES_SHOW" description="JBZOO_PAGES_SHOW_DESC">
                    <option value="1">JBZOO_YES</option>
                    <option value="0">JBZOO_NO</option>
                </field>
            </fieldset>

            <fieldset name="ORDER">
                <field name="order" type="list" default="none" label="JBZOO_ORDER" description="JBZOO_ORDER_DESC">
                    <option value="date">JBZOO_SORT_DATE</option>
                    <option value="rdate">JBZOO_SORT_RDATE</option>
                    <option value="alpha">JBZOO_SORT_ALPHA</option>
                    <option value="ralpha">JBZOO_SORT_RALPHA</option>
                    <option value="hits">JBZOO_SORT_HITS</option>
                    <option value="rhits">JBZOO_SORT_RHITS</option>
                    <option value="mdate">JBZOO_SORT_MDATE</option>
                    <option value="rmdate">JBZOO_SORT_RMDATE</option>
                    <option value="sort">JBZOO_SORT_SORT</option>
                    <option value="rsort">JBZOO_SORT_RSORT</option>
                    <option value="random">JBZOO_SORT_RANDOM</option>
                    <option value="none">JBZOO_SORT_NONE</option>
                </field>
                <field name="order_show" type="radio" default="1" label="JBZOO_ORDER_SHOW" description="JBZOO_ORDER_SHOW_DESC">
                    <option value="1">JBZOO_YES</option>
                    <option value="0">JBZOO_NO</option>
                </field>
            </fieldset>

            <fieldset name="BUTTON">
                <field name="button_submit_show" type="radio" default="1" label="JBZOO_BUTTON_SUBMIT_SHOW" description="JBZOO_BUTTON_SUBMIT_SHOW_DESC">
                    <option value="1">JBZOO_YES</option>
                    <option value="0">JBZOO_NO</option>
                </field>
                <field name="button_reset_show" type="radio" default="1" label="JBZOO_BUTTON_RESET_SHOW" description="JBZOO_BUTTON_RESET_SHOW_DESC">
                    <option value="1">JBZOO_YES</option>
                    <option value="0">JBZOO_NO</option>
                </field>
            </fieldset>

            <fieldset name="OTHERS">
                <field name="autosubmit" type="radio" default="0" label="JBZOO_FILTER_AUTOSUBMIT" description="JBZOO_FILTER_AUTOSUBMIT_DESC">
                    <option value="1">JBZOO_YES</option>
                    <option value="0">JBZOO_NO</option>
                </field>
                <field name="exact" type="radio" default="1" label="JBZOO_FILTER_EXACT" description="JBZOO_FILTER_EXACT_DESC">
                    <option value="1">JBZOO_FILTER_EXACT_NOTEXT</option>
                    <option value="0">JBZOO_FILTER_EXACT_TEXT</option>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>